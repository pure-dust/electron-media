{
  "private": true,
  "name": "kl-tools",
  "version": "0.0.1",
  "main": "dist/main/_.js",
  "author": "kamilee",
  "license": "MIT",
  "module": "es2020",
  "types": "./types-components/index.d.ts",
  "scripts": {
    "type": "node -r ts-node/register script/build-types",
    "start": "npm run start:all",
    "start:all": "concurrently -n=vue,ele -c=green,blue \"npm run start:vue\" \"npm run start:ele\"",
    "start:vue": "vite",
    "start:ele": "node -r ts-node/register script/build-main --env=development --watch --trace-warnings",
    "build:vue": "node -r ts-node/register script/build-render",
    "build:ele": "node -r ts-node/register script/build-main --env=production",
    "build:win": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder --win --x64",
    "build:mac": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder --mac"
  },
  "build": {
    "appId": "932184220@qq.com",
    "asar": false,
    "directories": {
      "output": "release/${version}"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!node_modules",
      "dist/**/*"
    ],
    "extraResources": [{
        "from": "src/preload",
        "to": "app/src/preload"
      },
      {
        "from": "./config.json",
        "to": "../resources"
      }
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@types/koa": "^2.13.3",
    "@types/koa-router": "^7.4.2",
    "@types/lodash": "^4.14.170",
    "@types/nedb": "^1.8.11",
    "@types/webpack-env": "^1.16.0",
    "@vueuse/core": "^7.5.3",
    "axios": "^0.21.1",
    "iconv-lite": "^0.6.3",
    "koa": "^2.13.1",
    "koa-router": "^10.0.0",
    "lodash": "^4.17.21",
    "lunar-typescript": "^1.2.16",
    "nanoid": "^3.1.25",
    "nedb": "^1.8.0",
    "pinia": "^2.0.9",
    "sass-resources-loader": "^2.2.3",
    "vue": "^3.2.0",
    "vue-router": "^4.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-typescript": "^7.14.3",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.12.5",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.2.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-import": "^1.13.3",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "css-loader": "^5.0.2",
    "electron": "12.0.9",
    "electron-builder": "^22.8.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-store": "^8.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.34.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "url-loader": "^4.1.1",
    "vite": "^2.3.3",
    "vitejs-plugin-electron": "^0.1.0",
    "vue-loader": "^16.2.0",
    "webpack": "^5.37.1",
    "prettier": "^2.5.1",
    "ts-morph": "^13.0.2",
    "fast-glob": "^3.2.10"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}